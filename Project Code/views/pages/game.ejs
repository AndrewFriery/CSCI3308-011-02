<%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>
        <style>

        </style>
        <main>
            <div class="container">
                <%- include ('../partials/message') %>
                    <% art.forEach(function(image) { %>
                        <% url=image.imageurl; type=image.imagetype; description=image.imageDescription; %>
                            <div class="card text-bg-dark p-3" style="width: 18rem; font-size: x-large;">
                                <div class="card-body">
                                    <h5 class="card-title">Current Score</h5>
                                    <center>
                                        <p class="card-text">
                                            <%= score %>
                                        </p>
                                    </center>

                                </div>
                            </div>
                            <center><img src="<%- url %>" style="width: 40%;"></center>
                            <table style="margin: auto;">
                                <th>
                                    <form action="/updateScore/<%- type %>/AI" method="get">
                                        <input type="hidden" class="form-control" id="guess_AI" value="AI" />
                                        <button type="submit" class="btn btn-primary btn-lg">AI</button>
                                    </form>
                                </th>
                                <th>
                                    <form action="/updateScore/<%- type %>/Real" method="get">
                                        <input type="hidden" class="form-control" id="guess_Real" value="Real" />
                                        <button type="submit" class="btn btn-success btn-lg">Real</button>
                                    </form>
                                </th>
                            </table>
                            <% }); %>

        </main>

        <%- include ('../partials/footer') %>
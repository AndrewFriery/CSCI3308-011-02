<%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>

        <main>
            <div class="container">
                <%- include ('../partials/message') %>
                    <table class="leaderboard" style="width:100%">
                        <% let ranking = 1 %>
                        <tr>
                            <th>Ranking</th>
                            <th>Username</th>
                            <th>Score</th>
                        </tr>
                        <% people.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= ranking %>
                                </td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.highscore %>
                                </td>
                            </tr>
                            <% ranking++ %>
                        <% }); %>
                    </table>
            </div>
        </main>

        <%- include ('../partials/footer') %>
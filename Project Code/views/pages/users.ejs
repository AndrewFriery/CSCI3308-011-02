<%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>

        <main>
            <div class="container">
                <%- include ('../partials/message') %>
                    <h1>Welcome Admin!</h1>
                    <h2>This is the Users Database</h2>
                    <table style="width: 100%;" id="pictures_table">
                        <tr>
                            <th>Username</th>
                            <th>High Score</th>
                            <th>Total Images</th>
                        </tr>
                        <% people.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.highscore %>
                                </td>
                                <td>
                                    <%= user.totalimages %>
                                </td>
                                <td>
                                    <form action="" method="">
                                        <input type="hidden" class="form-control" id="<%=user.username %>"
                                            value="<%-user.username %>" name="user_username" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
        </main>

        <%- include ('../partials/footer') %>
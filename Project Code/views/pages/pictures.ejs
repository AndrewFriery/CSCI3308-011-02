<%- include ('../partials/header') %>
    <%- include ('../partials/menu') %>

        <main>
            <div class="container">
                <%- include ('../partials/message') %>
                    <h1>Welcome Admin!</h1>
                    <table style="width: 100%;" id="pictures_table">
                        <tr>
                            <th>Image ID</th>
                            <th>Image</th>
                            <th>Image Type</th>
                            <th>Image Description</th>
                        </tr>
                        <% art.forEach(function(image) { %>
                            <tr>
                                <td>
                                    <%= image.imageid %>
                                </td>
                                <td>
                                    <img src="<%- image.imageurl %>" style="width: 20%;">
                                </td>
                                <td>
                                    <%= image.imagetype %>
                                </td>
                                <td>
                                    <%= image.imagedescription %>
                                </td>
                                <td>
                                    <form action="" method="">
                                        <input type="hidden" class="form-control" id="<%=image.imageid %>"
                                            value="<%-image.imageid %>" name="image_id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% console.log(image) %>
                                <% }); %>
                    </table>
        </main>

        <%- include ('../partials/footer') %>